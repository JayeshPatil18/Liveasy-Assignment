<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VerifyOTP">

    <ImageView
        android:id="@+id/back2"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        app:srcCompat="@drawable/baseline_arrow_back_24"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center|top"
        android:orientation="vertical"
        android:padding="40dp">



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Verify Phone Number"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Code is sent to "
            android:textColor="#515151"
            android:textSize="15sp"/>



        <TextView
            android:id="@+id/sentto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="+1xxxxxxxxxx"
            android:textColor="#515151"
            android:textSize="15sp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="50dp">

<!--        <EditText-->
<!--            android:id="@+id/optcode"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_weight="1"/>-->

        <EditText
            android:id="@+id/otpEditText1"
            android:autofillHints="smsOTPCode"
            android:importantForAutofill="yes"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="number"
            android:maxLength="1"
            android:textSize="20sp"
            android:padding="10dp"
            android:gravity="center"
            android:background="@drawable/edit_text_border"
            android:imeOptions="actionNext"/>

        <View
            android:layout_width="8dp"
            android:layout_height="match_parent" />

        <EditText
            android:id="@+id/otpEditText2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="number"
            android:maxLength="1"
            android:textSize="20sp"
            android:padding="10dp"
            android:gravity="center"
            android:background="@drawable/edit_text_border"
            android:imeOptions="actionNext"/>

        <View
            android:layout_width="8dp"
            android:layout_height="match_parent" />

        <EditText
            android:id="@+id/otpEditText3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="number"
            android:maxLength="1"
            android:textSize="20sp"
            android:padding="10dp"
            android:gravity="center"
            android:background="@drawable/edit_text_border"
            android:imeOptions="actionNext"/>

        <View
            android:layout_width="8dp"
            android:layout_height="match_parent" />

        <EditText
            android:id="@+id/otpEditText4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="number"
            android:maxLength="1"
            android:textSize="20sp"
            android:padding="10dp"
            android:gravity="center"
            android:background="@drawable/edit_text_border"
            android:imeOptions="actionNext"/>

        <View
            android:layout_width="8dp"
            android:layout_height="match_parent" />

        <EditText
            android:id="@+id/otpEditText5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="number"
            android:maxLength="1"
            android:textSize="20sp"
            android:padding="10dp"
            android:gravity="center"
            android:background="@drawable/edit_text_border"
            android:imeOptions="actionNext"/>

        <View
            android:layout_width="8dp"
            android:layout_height="match_parent" />

        <EditText
            android:id="@+id/otpEditText6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="number"
            android:maxLength="1"
            android:textSize="20sp"
            android:padding="10dp"
            android:gravity="center"
            android:background="@drawable/edit_text_border"
            android:imeOptions="actionDone"/>


    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:text="Didn't receive the code? "
            android:textColor="#515151"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/resendotp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:text="Request Again"
            android:textColor="#515151"
            android:textSize="15sp"
            android:textStyle="bold"/>
    </LinearLayout>


        <Button
            android:id="@+id/verifybtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:background="@drawable/btn"
            android:text="Verify and continue"
            android:textColor="@color/white"
            android:textStyle="bold" />

    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="165dp"
        android:layout_marginBottom="-2dp"
        android:layout_alignParentBottom="true"
        app:srcCompat="@drawable/bottom_vec4" />
</RelativeLayout>